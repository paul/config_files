
alias t="tail -f"

alias ls='ls -GF1h '
alias ll='ls -al'

alias grep='egrep --color=tty'

# Git
alias g="git"
alias gc='git commit'
alias gco='git checkout'
alias gst='git status'
alias gp='git pull'
alias gpu='git push'
alias ga='git add .'
alias gb='git branch'

alias grm="git status | grep deleted | awk '{ print \$3 }' | xargs git rm"
alias grml="git status | grep deleted | awk '{ print \$3 }'"
